@model Student

@{
    ViewBag.Title = "Edit";
}

<form asp-controller="Student" asp-action="Update" asp-route-id="@Model.StudentId" method="post" class="mt-3">

    <input type="hidden" asp-for="StudentId" />
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name">
        </div>
    </div>

    <br>

    <div class="form-group row">
        <label asp-for="Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Email" class="form-control" placeholder="Email">
        </div>
    </div>

    <br>

    <div class="form-group row">
        <label asp-for="Branch" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Branch" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<Branch>()"></select>
        </div>
    </div>

    <br>

    <div class="form-group row">
        <label asp-for="Gender" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @foreach (var gender in Model.AllGenders ?? new List<Gender>() )
            {
                <label class="radio-inline">
                    <input type="radio" asp-for="Gender" value="@gender" id="Gender@(gender)" />@gender<br />
                </label>
                
            }
        </div>
    </div>

    <br>

    <div class="form-group row">
        <label asp-for="Address" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <textarea asp-for="Address" class="form-control" placeholder="Address"></textarea>
        </div>
    </div>

    <br>

    <div class="form-group row">
        <div class="col-sm-10" class="text-center">
            <button type="submit" class="btn btn-primary">Update</button>
            <a asp-controller="Student" asp-action="GetAll" class="btn btn-primary" style="margin-left: 15px">Back</a>
        </div>
    </div>

    
</form>